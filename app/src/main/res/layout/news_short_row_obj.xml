<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/MainNewsAlertTextView"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/MainNewsTitleTextView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10px"
        android:layout_below="@+id/MainNewsAlertTextView"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/MainNewsExcertTextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="fill"
        android:layout_below="@+id/MainNewsDateTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/MainNewsAuthorTextView"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_alignBaseline="@+id/MainNewsDateTextView"
        android:layout_alignBottom="@+id/MainNewsDateTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5px"
        android:text="TextView" />

    <TextView
        android:id="@+id/MainNewsDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_below="@+id/MainNewsTitleTextView"
        android:layout_marginRight="5px"
        android:text="TextView"
        android:textColor="#000000" />

</RelativeLayout>
