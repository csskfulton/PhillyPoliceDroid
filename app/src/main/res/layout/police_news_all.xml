<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  
    <ProgressBar
            android:id="@+id/PoliceNewsAllProgress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    
    <TextView 
        android:id="@+id/textViewLoading" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/PoliceNewsAllProgress"
        android:layout_marginTop="5dp" 
        android:layout_centerHorizontal="true"
        android:text="Loading News...."/>

    <RelativeLayout
        android:id="@+id/PoliceNewsAllHeader"
        android:background="#cdc9c9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4px"
            android:layout_marginTop="10px"
            android:textSize="22dp"
            android:text="Lastest Police News Updates" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="2dp"
            android:textSize="17dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:gravity="center"/>

    </RelativeLayout>

    <ListView
        android:layout_below="@+id/PoliceNewsAllHeader"
        android:id="@+id/PoliceNewsAllListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</RelativeLayout>
