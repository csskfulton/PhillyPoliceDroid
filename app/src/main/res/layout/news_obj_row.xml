<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px"
        android:background="#00F0FF"
     	android:visibility="gone"
        android:id="@+id/NewsObjHeaderLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Video Available"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/textView1"
            android:src="@drawable/cam" />

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/DistrictNewsImageView"
        android:layout_below="@+id/NewsObjHeaderLayout"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/DistrictNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/NewsObjectALertType"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NewsObjectALertType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10px"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/DistrictNewsImageView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TextView" />

    <TextView
        android:id="@+id/DistrictNewsExcert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="10px"
        android:layout_below="@+id/DistrictNewsTitle"
        android:text="TextView" />

    <TextView
        android:id="@+id/DistrictNewsAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DistrictNewsExcert"
        android:layout_below="@+id/DistrictNewsExcert"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="13px"
        android:text="TextView" />

    <TextView
        android:id="@+id/DistrictNewsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/DistrictNewsAuthor"
        android:layout_alignBottom="@+id/DistrictNewsAuthor"
        android:layout_alignRight="@+id/DistrictNewsExcert"
        android:text="TextView" />

</RelativeLayout>
